{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,

    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "importHelpers": true,
    "target": "es6",
    "jsx": "react",
    "lib": ["dom", "es2016"]
  },
  "include": ["./test/**/*.*", "./src/**/*.*"],
  "files": ["./src/index.ts"]
}
